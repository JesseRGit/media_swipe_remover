<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageButton
            android:layout_height="80sp" app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/imageButton_DeleteMedia"
            android:layout_width="80sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="90dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_KeepMedia" android:layout_marginEnd="16dp"/>
    <ImageButton
            android:layout_width="80sp"
            android:layout_height="80sp" app:srcCompat="@android:drawable/ic_media_next"
            android:id="@+id/imageButton_KeepMedia"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="90dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton_DeleteMedia" android:layout_marginStart="19dp"/>
    <ImageButton
            android:layout_width="60sp"
            android:layout_height="60sp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/imageButton_RevertDeleteMedia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
    />
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars[11]"
            android:id="@+id/imageView_MainMedia"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton_DeleteMedia"/>
    <ImageButton
            android:layout_width="60sp"
            android:layout_height="60sp" app:srcCompat="@android:drawable/ic_menu_info_details"
            android:id="@+id/imageButton_ShowMediaInfo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="60sp"
            android:layout_height="60sp" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/imageButton_EditMedia"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <ImageButton
            android:layout_width="60sp"
            android:layout_height="60sp" app:srcCompat="@android:drawable/ic_media_previous"
            android:id="@+id/imageButton_PreviousMedia"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="14dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton_DeleteMedia" android:layout_marginBottom="16dp"/>
</android.support.constraint.ConstraintLayout>